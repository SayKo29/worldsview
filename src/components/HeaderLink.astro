---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const currentLang = pathname.split('/')[1];
const normalizedPathname = pathname.replace(`/${currentLang}`, '');
const normalizedHref = href?.toString().replace(`/${currentLang}`, '');
const subpath = normalizedPathname.match(/[^\/]+/g);
const isActive = normalizedHref === normalizedPathname || normalizedHref === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
